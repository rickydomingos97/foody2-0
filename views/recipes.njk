{% extends "layout.njk" %}

{% block content %}

        <div class="cards_recipies">
        
        <section class="cards">

            {% for item in items %}
            <div class="card" id="{{ items.indexOf(item) }}">
                <div class="card_image-container">
                    <img src="{{ item.image }}" alt="{{ item.title }}" class="small_image">
                </div>
                <div class="card-content">
                    <h4>{{ item.title }}</h4>
                </div>
                <div class="card_info">
                    <p>{{ item.author }}</p>
                </div>
            </div>
            {% endfor %}

        </section>

{% endblock %}