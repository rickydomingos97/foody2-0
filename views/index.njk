{% extends "layout.njk" %}

{% block content %}

    <div class="wrapper">
        <h1>
            As melhores receitas
        </h1>
        <p>
            Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
        </p>

        <img src="/chef.png" alt="chef">
    </div>

    <div class="cards_recipies">
        <h1>
            Mais acessadas
        </h1>

        <section class="cards">
            {% for item in items %}
            <div class="card">
                <div class="card_image-container">
                    <img src="{{ item.image }}" alt="{{ item.title }}">
                </div>
                <div class="card-content">
                    <p>{{ item.title }}</p>
                </div>
                <div class="card_info">
                    <p>{{ item.author }}</p>
                </div>
            </div>
            {% endfor %}
        </section>
    </div>

{% endblock %}